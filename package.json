{
    "name": "@workinprogress-ai/tsconfig",
    "version": "0.0.1",
    "description": "TypeScript configurations for Work In Progress AI projects",
    "author": "WIP Team",
    "packageManager": "bun@1.3.2",
    "publishConfig": {
        "registry": "https://npm.pkg.github.com",
        "access": "public"
    },
    "sideEffects": false,
    "type": "module",
    "main": "base.json",
    "files": [
        "*.json",
        "README.md"
    ],
    "exports": {
        "./base.json": "./base.json",
        "./library.json": "./library.json",
        "./react-library.json": "./react-library.json",
        "./vite.json": "./vite.json",
        "./node.json": "./node.json"
    },
    "scripts": {
        "build": "echo \"No build step required\" && exit 0",
        "clean": "rm -rf node_modules",
        "test": "echo \"No tests step required\" && exit 0",
        "coverage": "echo \"No coverage step required\" && exit 0",
        "lint": "echo \"No linting step required\" && exit 0",
        "spellcheck": "cspell lint '**/*.md' --no-progress",
        "ci:release": "semantic-release",
        "prepare": "husky"
    },
    "devDependencies": {
        "@commitlint/cli": "20.1.0",
        "@commitlint/config-conventional": "20.0.0",
        "@semantic-release/changelog": "^6.0.3",
        "@semantic-release/commit-analyzer": "13.0.1",
        "@semantic-release/git": "^10.0.1",
        "@semantic-release/github": "^11.0.1",
        "@semantic-release/npm": "^12.0.1",
        "@semantic-release/release-notes-generator": "^14.0.1",
        "cspell": "9.3.0",
        "husky": "9.1.7",
        "semantic-release": "25.0.2",
        "typescript": "5.9.3"
    },
    "peerDependencies": {
        "typescript": "5.9.3"
    },
    "repository": {
        "type": "git",
        "url": "https://github.com/workinprogress-ai/pkg-tsconfig"
    },
    "keywords": [
        "typescript",
        "tsconfig",
        "configuration"
    ]
}
